<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <Table
        id="idSupplierTab"
        items="{path: '/suppliers', sorter: {path: 'name'}}"
        itemPress="onSupplierSelect"
        mode="SingleSelectMaster"
    >
        <headerToolbar>
            <Toolbar>
                <Button
                    icon="sap-icon://add"
                    text="Add Email Column"
                    press="onAddNewCol"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Label text="Supplier Name" />
            </Column>
            <Column>
                <Label text="City" />
            </Column>
            <Column
                demandPopin="true"
                minScreenWidth="Tablet"
            >
                <Label text="Since When" />
            </Column>
            <Column
                demandPopin="true"
                minScreenWidth="Desktop"
            >
                <Label text="Contact Person" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation">
                <cells>
                    <Input value="{name}" showValueHelp="true" valueHelpRequest="onFilterSupplier" />
                    <Input value="{city}" showValueHelp="true" valueHelpRequest="handleValueHelpRequest" />
                    <Text text="{sinceWhen}" />
                    <Text text="{contactPerson}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <form:SimpleForm layout="ResponsiveGridLayout" editable="true">
        <form:content>
            <Label text="Name" />
            <Input value="{NAME}">
                <layoutData>
                    <layout:GridData
                        spanL="4"
                        spanM="5"
                        spanS="6"
                    />
                </layoutData>
            </Input>
            <Label text="Category" />
            <Text text="{CATEGORY}" />
            <Label text="Price" />
            <Text text="{PRICE} {CURRENCY_CODE}" />
            <Label text="Description" />
            <Text text="{DESCRIPTION}" />

            <Label text="Supplier Name" />
            <Text text="{To_Supplier/COMPANY_NAME}" />
            <Label text="Supplier Email" />
            <Text text="{To_Supplier/EMAIL_ADDRESS}" />
            <Label text="Supplier Phone no." />
            <Text text="{To_Supplier/PHONE_NUMBER}" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>

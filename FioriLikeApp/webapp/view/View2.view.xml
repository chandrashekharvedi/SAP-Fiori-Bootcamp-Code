<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="ey.sd.products.controller.View2"
>
    <Page
        title="{name}"
        showNavButton="true"
        navButtonPress="handleGoBack"
    >
        <content>
            <ObjectHeader
                title="{name}"
                intro="{type}"
                number="{price}"
                numberUnit="{unit}"
                icon="{image}"
            />
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press=""
                    type="Accept"
                />
                <Button
                    text="Cancel"
                    press=""
                    type="Reject"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>

<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="ey.sd.products.controller.View1"
>
    <Page title="View 1">
        <!-- <headerContent>
            <Button
                icon="sap-icon://navigation-right-arrow"
                press="handleGoNext"
            />
        </headerContent> -->
        <content>
            <List
                id="idFruitsList"
                items="{
                    path: '/fruits',
                    sorter: {
                        path: 'type',
                        group: true
                    }    
                }"
                headerText="{i18n>ListTitle}"
                mode="SingleSelectMaster"
                delete="handleFruitDelete"
                itemPress="handleItemPress"
            >   
                <headerToolbar>
                    <Toolbar >
                        <SearchField search="handleFruitsSearch" ></SearchField>
                        <Button icon="sap-icon://delete" type="Reject" press="handleDeleteSelected" ></Button>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                        title="{name}"
                        intro="{type}"
                        number="{price}"
                        numberUnit="{unit}"
                        icon="{image}"
                        type="Navigation">
                    
                        <firstStatus>
                            <ObjectStatus text="{status}" state="{= ${status} === 'Available' ? 'Success' : (${status} === 'Discontinued' ? 'Error' : 'Warning')}"  ></ObjectStatus>
                        </firstStatus>
                    </ObjectListItem>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer ></ToolbarSpacer>
                <Button text="Save" type="Success" press="onSave" ></Button>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>

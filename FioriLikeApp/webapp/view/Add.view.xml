<mvc:View xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ey.sd.products.controller.Add" >

    <Page title="Add New Product" showNavButton="true" navButtonPress="onBack">

        <content>
            <form:SimpleForm  
                title="New Product"
                editable="true"
                layout="ResponsiveGridLayout" 
                labelSpanL="3"
                labelSpanM="3"
                labelSpanXL="3"
                labelSpanS="12"

                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
            
            >
                <Label text="Product ID" ></Label>
                <Input placeholder="Enter Product Id" value="{add>/PRODUCT_ID}" ></Input>

                <Label text="Name" ></Label>
                <Input  placeholder="Enter Product Name" value="{add>/NAME}" ></Input>
                
                <Label text="Category"  ></Label>
                <Select forceSelection="false" selectedKey="{add>/CATEGORY}" >
                    <items>
                        <core:Item text="Notebooks" key="Notebooks" ></core:Item>
                        <core:Item text="Flat Screen Monitors" key="Flat Screen Monitors" ></core:Item>
                        <core:Item text="Laser Printers" key="Laser Printers" ></core:Item>
                        <core:Item text="Mice" key="Mice" ></core:Item>
                        <core:Item text="Keyboards" key="Keyboards" ></core:Item>
                        <core:Item text="Scanners" key="Scanners" ></core:Item>
                    </items>
                </Select>

                <Label text="Price" ></Label>
                <Input  placeholder="0.00" textAlign="Right" value="{add>/PRICE}" ></Input>
                <Input placeholder="USD" value="{add>/CURRENCY_CODE}"></Input>

                <Label text="Description" ></Label>
                <TextArea placeholder="Enter Product Description" value="{add>/DESCRIPTION}" />

                <Label text="Supplier" ></Label>
                <Select items="{/SupplierSet}" showSecondaryValues="true" forceSelection="false" selectedKey="{add>/SUPPLIER_ID}" change="onSupplierSelect"  >
                    <items>
                        <core:ListItem text="{COMPANY_NAME}" key="{BP_ID}" additionalText="{BP_ID}" ></core:ListItem>
                    </items>
                </Select>
            </form:SimpleForm>
        </content>

        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Save" type="Success" press="handelOnSave" />
            </Toolbar>
        </footer>

    </Page>

</mvc:View>